<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="chery_check_bg_style">
        <item name="android:layout_width"   >match_parent</item>
        <item name="android:layout_height"  >match_parent</item>
        <item name="android:background"     >@mipmap/test</item>
        <item name="android:alpha"          >0.5</item>
    </style>

    <style name="base_dialog_linearlayout">
        <item name="android:layout_width"               >wrap_content</item>
        <item name="android:orientation"                >vertical</item>
        <item name="android:gravity"                    >center</item>
    </style>
    
    <style name="dialog_linearlayout_612px_width" parent="base_dialog_linearlayout">
        <item name="android:layout_width"               >@dimen/dp_size_408_612px</item>
    </style>


    <!--********************************** Imageview style *************************************-->
    <style name="base_imageview">
        <item name="android:layout_width"               >wrap_content</item>
        <item name="android:layout_height"              >wrap_content</item>
    </style>

    <style name="attention_imageview" parent="base_imageview">
        <item name="android:src"                        >@mipmap/icon_attention_heavy</item>
    </style>

    <style name="notify_imageview" parent="base_imageview">
        <item name="android:src"                        >@mipmap/icon_notify</item>
    </style>
    <!--********************************** Imageview style *************************************-->


    <!--********************************** dialog style *************************************-->
    <style name="base_dialog_layout">
        <item name="android:layout_width"               >wrap_content</item>
        <item name="android:layout_height"              >wrap_content</item>
        <item name="android:alpha"                      >1</item>
    </style>

    <style name="dialog_2560x1440_bg" parent="base_dialog_layout">
        <item name="android:layout_width">@dimen/dialog_width_2560</item>
        <item name="android:layout_height">@dimen/dialog_height_1440</item>
    </style>

    <style name="dialog_1280x800_bg" parent="base_dialog_layout">
        <item name="android:layout_width">@dimen/dialog_width_1280</item>
        <item name="android:layout_height">@dimen/dialog_height_800</item>
        <item name="android:background">@mipmap/icon_dialog_1280x800</item>
    </style>

    <style name="dialog_1200x180_bg" parent="base_dialog_layout">
        <item name="android:layout_width"   >@dimen/dialog_width_1200</item>
        <item name="android:layout_height"  >@dimen/dialog_height_180</item>
        <item name="android:background"     >@mipmap/icon_dialog_1200x180_bg</item>
    </style>
    <!--********************************** dialog style *************************************-->


    <!--********************************** button style *************************************-->
    <style name="base_button">
        <item name="android:gravity"                    >center</item>
        <item name="android:singleLine"                 >false</item>
        <item name="android:textAllCaps"                >false</item>
        <item name="textAllCaps"                        >false</item>
    </style>

    <style name="confirm_button" parent="base_button">
        <item name="android:textColor">@color/selector_btn_confirm_tv_color</item>
    </style>

    <style name="confirm_button_400x108" parent="confirm_button">
        <item name="android:layout_width">@dimen/button_width_400</item>
        <item name="android:layout_height">@dimen/button_height_108</item>
        <item name="android:textSize">@dimen/text_size_42</item>
        <item name="android:background">@drawable/selector_btn_confirm_400x108_style</item>
    </style>

    <style name="confirm_button_500x108" parent="confirm_button">
        <item name="android:layout_width">@dimen/button_width_500</item>
        <item name="android:layout_height">@dimen/button_height_108</item>
        <item name="android:textSize">@dimen/text_size_42</item>
        <item name="android:background">@drawable/selector_btn_confirm_500x108_style</item>
    </style>

    <style name="debug_button_500x80" parent="confirm_button">
        <item name="android:layout_width">@dimen/px_size_500</item>
        <item name="android:layout_height">@dimen/px_size_80</item>
        <item name="android:textSize">@dimen/text_size_36</item>
        <item name="android:background">@drawable/debug_btn_500x80_style</item>
    </style>

    <style name="confirm_button_240x96" parent="confirm_button">
        <item name="android:layout_width"       >@dimen/button_width_240</item>
        <item name="android:layout_height"      >@dimen/button_height_96</item>
        <item name="android:textSize"           >@dimen/text_size_42</item>
        <item name="android:textColor"          >@color/selector_btn_confirm_tv_color</item>
        <item name="android:background"         >@drawable/selector_btn_confirm_240x96_style</item>
    </style>
    <!--********************************** button style *************************************-->


    <!--********************************** TextView style *************************************-->
    <style name="base_text">
        <item name="android:layout_width"       >wrap_content</item>
        <item name="android:layout_height"      >wrap_content</item>
        <item name="android:singleLine"         >false</item>
        <item name="android:gravity"            >center</item>
        <item name="android:textColor"          >@color/color_black_75</item>
    </style>

    <style name="text_single_line" parent="base_text">
        <item name="android:singleLine"         >true</item>
    </style>

    <style name="text_560_width_48_size_single_line" parent="text_single_line">
        <item name="android:layout_width"       >@dimen/px_size_560</item>
        <item name="android:textSize"           >@dimen/text_size_48</item>
    </style>

    <style name="text_560_width_36_size" parent="base_text">
        <item name="android:layout_width"       >@dimen/px_size_560</item>
        <item name="android:textSize"           >@dimen/text_size_36</item>
    </style>

    <style name="text_590_width_36_size_single_line" parent="text_single_line">
        <item name="android:layout_width"       >@dimen/px_size_590</item>
        <item name="android:textSize"           >@dimen/text_size_36</item>
    </style>

    <style name="text_980_width_42_size" parent="base_text">
        <item name="android:layout_width"       >@dimen/dp_size_653_980px</item>
        <item name="android:textSize"           >@dimen/text_size_42</item>
    </style>

    <style name="text_980_width_40_size" parent="base_text">
        <item name="android:layout_width"       >@dimen/dp_size_653_980px</item>
        <item name="android:textSize"           >@dimen/text_size_40</item>
    </style>

    <style name="text_980_width_36_size" parent="base_text">
        <item name="android:layout_width"       >@dimen/dp_size_653_980px</item>
        <item name="android:textSize"           >@dimen/text_size_36</item>
    </style>

    <style name="text_1680_width_32_size_single_line" parent="text_single_line">
        <item name="android:layout_width"       >@dimen/px_size_1680</item>
        <item name="android:textSize"           >@dimen/text_size_32</item>
    </style>

    <style name="text_2240_width_70_size_single_line" parent="text_single_line">
        <item name="android:layout_width"       >@dimen/px_size_2240</item>
        <item name="android:textSize"           >@dimen/text_size_70</item>
    </style>
    <!--********************************** TextView style *************************************-->
</resources>